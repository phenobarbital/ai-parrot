# Telegram Bot Configuration
# =========================
#
# Copy this file to env/telegram_bots.yaml
#
# Bot tokens: use env var {AGENT_NAME}_TELEGRAM_TOKEN
# The chatbot_id must match a bot registered in BotManager

agents:
  # Example 1: Basic agent
  HRAgent:
    chatbot_id: hr_agent
    welcome_message: "Hello! I'm your HR Assistant. Use /help for commands."

